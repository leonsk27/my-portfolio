rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // PÚBLICO: Cualquiera puede leer tus proyectos
      allow read: if true;
      
      // PRIVADO: Nadie puede escribir desde la web/app
      // (Tú subirás los datos manualmente desde la consola de Firebase)
      allow write: if false;
    }
  }
}